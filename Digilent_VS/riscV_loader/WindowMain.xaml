        <Menu Name="menuBar" DockPanel.Dock="Top" FontSize="12">
            <MenuItem Name="menuItemFile" Header="_File">
                <MenuItem Name="menuItemConvert" Header="_Convert" InputGestureText="Ctrl+O" Click="MenuItemConvert_Click" />
                <Separator />
                <MenuItem Name="menuItemExit" Header="E_xit" InputGestureText="Alt+F4" Click="MenuItemExit_Click"/>
            </MenuItem>
            <MenuItem Name="menuItemLoader" Header="_Loader">
                <MenuItem Name="menuItemConnect" Header="_Connect" InputGestureText="Ctrl+C" Click="MenuItemConnect_Click" />
                <Separator />
                <MenuItem Name="menuItemProgram" Header="_Program" InputGestureText="Ctrl+P" Click="MenuItemProgram_Click" />
                <MenuItem Name="menuItemLoadIntoMemory" Header="_Load into memory" InputGestureText="Ctrl+L" Click="MenuItemLoadIntoMemory_Click" />
                <MenuItem Name="menuItemSaveMemoryChunk" Header="_Save memory chunk" InputGestureText="Ctrl+S" Click="MenuItemSaveMemoryChunk_Click" />
            </MenuItem>
            <MenuItem Name="menuItemDebug" Header="_Debug">
