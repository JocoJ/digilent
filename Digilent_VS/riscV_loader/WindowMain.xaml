                <MenuItem Name="menuItemPause" Header="_Pause" InputGestureText="F6" Click="MenuItemPause_Click" />
                <MenuItem Name="menuItemHalt" Header="_Halt" InputGestureText="F7" Click="MenuItemHalt_Click" />
                <MenuItem Name="menuItemStep" Header="Step" InputGestureText="F9" Click="MenuItemStep_Click" />
            </MenuItem>
        </Menu>

