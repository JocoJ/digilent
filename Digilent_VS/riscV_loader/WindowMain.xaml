        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:riscV_loader"
        xmlns:commands="clr-namespace:riscV_loader.Commands"
        mc:Ignorable="d"
        Title="RISC-V loader" Height="795" Width="1080" WindowState="Maximized" Loaded="WindowMain_Loaded" Closing="WindowMain_Closing">
    <Window.CommandBindings>
        <CommandBinding Command="{x:Static commands:AppCommands.commandConvert}" Executed="CommandConvert_Executed" />
        <CommandBinding Command="{x:Static commands:AppCommands.commandExit}" Executed="CommandExit_Executed" />
        <CommandBinding Command="{x:Static commands:AppCommands.commandConnect}" Executed="CommandConnect_Executed" />
        <CommandBinding Command="{x:Static commands:AppCommands.commandProgram}" Executed="CommandProgram_Executed" />
        <CommandBinding Command="{x:Static commands:AppCommands.commandLoadIntoMemory}" Executed="CommandLoadIntoMemory_Executed" />
        <CommandBinding Command="{x:Static commands:AppCommands.commandSaveMemoryChunk}" Executed="CommandSaveMemoryChunk_Executed" />
        <CommandBinding Command="{x:Static commands:AppCommands.commandStart}" Executed="CommandStart_Executed" />
        <CommandBinding Command="{x:Static commands:AppCommands.commandPause}" Executed="CommandPause_Executed" />
        <CommandBinding Command="{x:Static commands:AppCommands.commandHalt}" Executed="CommandHalt_Executed" />
        <CommandBinding Command="{x:Static commands:AppCommands.commandStep}" Executed="CommandStep_Executed" />
    </Window.CommandBindings>

    <Window.InputBindings>
        <KeyBinding Key="O" Modifiers="Ctrl" Command="{x:Static commands:AppCommands.commandConvert}" />
        <KeyBinding Key="F4" Modifiers="Alt" Command="{x:Static commands:AppCommands.commandExit}" />
        <KeyBinding Key="C" Modifiers="Ctrl" Command="{x:Static commands:AppCommands.commandConnect}" />
        <KeyBinding Key="P" Modifiers="Ctrl" Command="{x:Static commands:AppCommands.commandProgram}" />
        <KeyBinding Key="L" Modifiers="Ctrl" Command="{x:Static commands:AppCommands.commandLoadIntoMemory}" />
        <KeyBinding Key="S" Modifiers="Ctrl" Command="{x:Static commands:AppCommands.commandSaveMemoryChunk}" />
        <KeyBinding Key="F5" Command="{x:Static commands:AppCommands.commandStart}" />
        <KeyBinding Key="F6" Command="{x:Static commands:AppCommands.commandPause}" />
        <KeyBinding Key="F7" Command="{x:Static commands:AppCommands.commandHalt}" />
        <KeyBinding Key="F9" Command="{x:Static commands:AppCommands.commandStep}" />
    </Window.InputBindings>

